<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#141414"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/resultadoText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"/>

    <!-- Primera fila -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/buttonAC"
            style="@style/CalculatorButton"
            android:text="AC"
            android:backgroundTint="#3E3E3E"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/buttonMenosMas"
            style="@style/CalculatorButton"
            android:text="+/-"
            android:backgroundTint="#3E3E3E"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/buttonPorcentaje"
            style="@style/CalculatorButton"
            android:text="%"
            android:backgroundTint="#3E3E3E"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/buttonDivide"
            style="@style/OrangeButton"
            android:text="÷"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <!-- Segunda fila -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/button7"
            style="@style/CalculatorButton"
            android:text="7"
            android:layout_margin="5dp"
            android:backgroundTint="#282828"/>

        <Button
            android:id="@+id/button8"
            style="@style/CalculatorButton"
            android:text="8"
            android:layout_margin="5dp"
            android:backgroundTint="#282828"/>

        <Button
            android:id="@+id/button9"
            style="@style/CalculatorButton"
            android:text="9"
            android:layout_margin="5dp"
            android:backgroundTint="#282828"/>

        <Button
            android:id="@+id/buttonMultiplicacion"
            style="@style/OrangeButton"
            android:layout_margin="5dp"
            android:text="×"/>
    </LinearLayout>

    <!-- Tercera fila -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"

        android:gravity="center">

        <Button
            android:id="@+id/button4"
            style="@style/CalculatorButton"
            android:text="4"
            android:layout_margin="5dp"
            android:backgroundTint="#282828"/>

        <Button
            android:id="@+id/button5"
            style="@style/CalculatorButton"
            android:text="5"
            android:layout_margin="5dp"
            android:backgroundTint="#282828"/>

        <Button
            android:id="@+id/button6"
            style="@style/CalculatorButton"
            android:text="6"
            android:layout_margin="5dp"
            android:backgroundTint="#282828"/>

        <Button
            android:id="@+id/buttonMenos"
            style="@style/OrangeButton"
            android:layout_margin="5dp"
            android:text="-"/>
    </LinearLayout>

    <!-- Cuarta fila -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/button1"
            style="@style/CalculatorButton"
            android:text="1"
            android:layout_margin="5dp"
            android:backgroundTint="#282828"/>

        <Button
            android:id="@+id/button2"
            style="@style/CalculatorButton"
            android:text="2"
            android:layout_margin="5dp"
            android:backgroundTint="#282828"/>

        <Button
            android:id="@+id/button3"
            style="@style/CalculatorButton"
            android:text="3"
            android:layout_margin="5dp"
            android:backgroundTint="#282828"/>

        <Button
            android:id="@+id/buttonMas"
            style="@style/OrangeButton"
            android:layout_margin="5dp"
            android:text="+"/>
    </LinearLayout>

    <!-- Quinta fila -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Botón 0 ocupará el doble de espacio -->
        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="0"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#282828"/>

        <Button
            android:id="@+id/buttonDecimal"
            style="@style/CalculatorButton"
            android:layout_margin="5dp"
            android:text="."
            android:backgroundTint="#282828"/>

        <Button
            android:id="@+id/buttonIgual"
            style="@style/OrangeButton"
            android:layout_margin="5dp"
            android:text="="/>
    </LinearLayout>

    <!-- Ajustar colores, fuentes, y espaciado similar a los anteriores -->
</LinearLayout>
